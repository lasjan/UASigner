<Window x:Class=" UASigner.WpfApp.SubWindows.AddEditProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add/Edit Profile" Height="300" Width="300">

    <DockPanel>
        <StackPanel Margin="10" DockPanel.Dock="Top">
        <Label>Type:</Label>
        <ComboBox Name="ComboBoxEdit_InAccess" SelectionChanged="ComboBoxEdit_InAccess_SelectionChanged">
        </ComboBox>
        <WrapPanel Name="DirectoryInfo" Visibility="Hidden">
            <TextBox Name="NewFolder"></TextBox>
        </WrapPanel>


       
    </StackPanel>
        <Button Click="Button_Click" VerticalAlignment="Bottom" Margin="10 0 10 20">Add</Button>
    </DockPanel>
</Window>
